{
  "name": "@mds/glass",
  "version": "1.2.0",
  "description": "Frosted glass surface with theme-aware highlights",
  "author": "MDS Team",
  "license": "MIT",
  "tags": ["glass", "frosted", "static"],

  "optics": {
    "opacity": 1,
    "blur": "18px",
    "saturation": "160%",
    "tint": "rgba(255, 255, 255, 0.18)"
  },

  "surface": {
    "radius": "20px",
    "border": "1px solid rgba(255, 255, 255, 0.35)",
    "shadow": [
      "inset 0 1px 0 rgba(255,255,255,0.55)",
      "0 28px 70px rgba(9, 13, 23, 0.35)"
    ]
  },

  "customCSS": {
    "background": "radial-gradient(at 35% 30%, rgba(255,255,255,0.22), rgba(255,255,255,0.04))",
    "background-blend-mode": "overlay",
    "color": "rgba(12,18,28,0.85)",
    "font-weight": "500",
    "letter-spacing": "0.2px"
  },

  "states": {
    "hover": {
      "surface": {
        "shadow": [
          "inset 0 1px 0 rgba(255,255,255,0.65)",
          "0 32px 82px rgba(9,13,23,0.38)"
        ]
      }
    },
    "press": {
      "surface": {
        "shadow": [
          "inset 0 1px 0 rgba(255,255,255,0.5)",
          "0 18px 40px rgba(9,13,23,0.32)"
        ]
      }
    }
  },

  "theme": {
    "light": {
      "optics": {
        "tint": "rgba(255,255,255,0.26)"
      },
      "surface": {
        "border": "1px solid rgba(255,255,255,0.4)",
        "shadow": [
          "inset 0 1px 0 rgba(255,255,255,0.7)",
          "0 20px 60px rgba(148,163,184,0.32)"
        ]
      },
      "customCSS": {
        "background": "radial-gradient(at 30% 20%, rgba(255,255,255,0.3), rgba(255,255,255,0.08))"
      }
    },
    "dark": {
      "optics": {
        "tint": "rgba(255,255,255,0.04)"
      },
      "surface": {
        "border": "1px solid rgba(255,255,255,0.28)",
        "shadow": [
          "inset 0 1px 0 rgba(255,255,255,0.45)",
          "0 34px 85px rgba(9,13,23,0.45)"
        ]
      },
      "customCSS": {
        "background": "radial-gradient(at 40% 25%, rgba(148,163,184,0.04), rgba(15,23,42,0.15))",
        "color": "#13c2c2"
      }
    }
  }
}
