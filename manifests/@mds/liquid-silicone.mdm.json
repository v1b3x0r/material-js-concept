{
  "name": "@mds/liquid-silicone",
  "version": "3.0.0",
  "description": "Elastic silicone material with tactile physics and glassmorphic appearance",
  "author": "MDS Team",
  "license": "MIT",
  "tags": ["elastic", "tactile", "physics", "silicone", "glassmorphism"],

  "optics": {
    "opacity": 1,
    "blur": "22px",
    "saturation": "180%",
    "tint": "rgba(255, 255, 255, 0.25)"
  },

  "surface": {
    "radius": "24px",
    "border": "1px solid rgba(255, 255, 255, 0.25)",
    "shadow": [
      "inset 0 1px 0 rgba(255, 255, 255, 0.55)",
      "0 10px 28px rgba(0, 0, 0, 0.18)"
    ]
  },

  "behavior": {
    "physics": "./manifests/@mds/liquid-silicone.physics.js",
    "physicsParams": {
      "tension": 44,
      "damping": 2,
      "maxStretchX": 0.12,
      "maxStretchY": 0.12,
      "parallax": 14
    },
    "cursor": "pointer",
    "transition": "transform 0.3s cubic-bezier(0.25, 1, 0.5, 1), background-position 0.3s ease"
  },

  "customCSS": {
    "background": "radial-gradient(at 35% 30%, rgba(255, 255, 255, 0.25), rgba(255, 255, 255, 0.05))",
    "background-blend-mode": "overlay",
    "user-select": "none",
    "-webkit-tap-highlight-color": "transparent",
    "will-change": "transform, background-position, filter"
  },

  "states": {
    "base": {
      "surface": {
        "shadow": [
          "inset 0 1px 0 rgba(255, 255, 255, 0.55)",
          "0 10px 28px rgba(0, 0, 0, 0.18)"
        ]
      }
    },
    "hover": {
      "surface": {
        "shadow": [
          "inset 0 1px 0 rgba(255, 255, 255, 0.6)",
          "0 12px 32px rgba(0, 0, 0, 0.22)"
        ]
      }
    },
    "press": {
      "surface": {
        "shadow": [
          "inset 0 1px 0 rgba(255, 255, 255, 0.5)",
          "0 6px 16px rgba(0, 0, 0, 0.16)"
        ]
      }
    }
  },

  "theme": {
    "light": {
      "optics": {
        "tint": "rgba(255, 255, 255, 0.3)"
      },
      "customCSS": {
        "background": "radial-gradient(at 35% 30%, rgba(255, 255, 255, 0.3), rgba(255, 255, 255, 0.08))"
      }
    },
    "dark": {
      "optics": {
        "tint": "rgba(255, 255, 255, 0.2)"
      },
      "customCSS": {
        "background": "radial-gradient(at 35% 30%, rgba(255, 255, 255, 0.2), rgba(255, 255, 255, 0.03))"
      }
    }
  }
}
