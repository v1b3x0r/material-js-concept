{
  "name": "@mds/paper",
  "version": "1.1.0",
  "description": "Dark matte paper with visible grain",
  "author": "MDS Team",
  "license": "MIT",
  "tags": ["paper", "matte", "texture", "dark"],

  "optics": {
    "opacity": 0.96,
    "tint": "#e5e5e5"
  },

  "surface": {
    "radius": "18px",
    "border": "1px solid rgba(248, 250, 252, 0.08)"
  },

  "states": {
    "hover": {
      "surface": {
        "shadow": [
          "0 1px 0 rgba(255, 255, 255, 0.06)",
          "0 16px 42px rgba(2, 6, 23, 0.5)"
        ]
      }
    },
    "press": {
      "surface": {
        "shadow": [
          "0 1px 0 rgba(255, 255, 255, 0.08)",
          "0 10px 24px rgba(2, 6, 23, 0.45)"
        ]
      }
    },
    "disabled": {
      "optics": {
        "opacity": 0.5
      },
      "customCSS": {
        "color": "rgba(248, 250, 252, 0.6)"
      }
    }
  },

  "theme": {
    "light": {
      "optics": {
        "tint": "#e5e5e5",
        "opacity": 0.9
      },
      "surface": {
        "border": "1px solid rgba(248, 250, 252, 0.4)"
      }
    },
    "dark": {
      "optics": {
        "tint": "#333333",
        "opacity": 0.97
      },
      "surface": {
        "border": "1px solid rgba(248, 250, 252, 0.14)"
      },
      "customCSS": {
        "color": "#fff"
      }
    }
  }
}
