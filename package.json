{
  "name": "@mds/core",
  "version": "2.0.0",
  "description": "Material Definition System - Think in materials, not CSS properties",
  "main": "./dist/mds.umd.js",
  "module": "./dist/mds.esm.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/mds.esm.js",
      "require": "./dist/mds.umd.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "manifests",
    "spec",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "material",
    "design-system",
    "ui",
    "glassmorphism",
    "physics",
    "animation",
    "material-design"
  ],
  "author": "MDS Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/material-js-concept"
  },
  "devDependencies": {
    "terser": "^5.44.0",
    "typescript": "^5.6.0",
    "vite": "^6.0.0"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@vercel/analytics": "^1.5.0"
  }
}
